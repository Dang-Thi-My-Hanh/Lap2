public class Fibonacci {
		//get the nth value of the Fibonacci series
		public static int getFibonacci(int n) {
		    if(n<=1) {
		    	return 0;
		    }
		      if(n==2) {
		    	  return 1;}
		      return getFibonacci(n-1)+ getFibonacci(n-2);
		      }
